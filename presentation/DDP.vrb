\begin{lstlisting}
(defn bestelle [F T]
  (let [pizza (BestellePizza F T)]
    {:zubereitung (str (MachEine pizza) "\n"
                       (Vorbereitung pizza) "\n"
                       (:backen pizza) "\n"
                       (:schneiden pizza) "\n"
                       (:verpackung pizza) "\n")
     :pizza pizza}))
\end{lstlisting}
